<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	style="?attr/MainGroup"
	android:background="#c5cae9"
	>

	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/colorPrimaryDark"
		android:id="@+id/viewListExerciseHeaderLine" />
	<RelativeLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:id="@+id/relativeLayoutListExerciseHeader"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:background="@android:color/transparent">

		<TextView
            android:id="@+id/groupname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:text="Name"
			android:lines="1"
            android:textStyle="bold"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="16dp" />

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/imageListExerciseHeader"
			android:src="@drawable/ic_expand_more_white_24dp"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:layout_marginLeft="16dp"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="16dp" />

		<TextView
android:id="@+id/members"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textColor="@color/colorPrimaryDark"
android:textSize="16sp"
android:text="Name"
			android:lines="1"
            android:textStyle="normal|italic"
			android:layout_toLeftOf="@+id/imageListExerciseHeader"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="16dp" />

	</RelativeLayout>

	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/colorPrimaryDark"
		android:id="@+id/viewListExerciseHeaderLineBottom" />
</LinearLayout>
